@model CreateCustomerViewModel

@{

}
<br />
<div class="container-fluid">
    @using (Html.BeginForm("CreateCustomer", "Customer", FormMethod.Post))
    {
        <form>
            <div class="form-group row">
                @Html.LabelFor(model => model.MusteriAdi, "Müşteri Adı", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.MusteriAdi, new { @class="form-control" , @required = "required" })
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.MusteriSoyadi, "Müşteri Soyadı", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.MusteriSoyadi, new { @class="form-control", @required = "required"})
                </div>
            </div>
             <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.DogumTarihi, "Doğum Tarihi", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.DogumTarihi, new { @class="form-control datetimepicker" , @placeholder = "dd.MM.yyyy" ,@required = "required"})
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.TelNo, "Tel No", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.TelNo, new { @class="form-control" , @placeholder = "05xxxxxxxxx" , @pattern = @"^([0][5][0-9]{9})$",@required = "required"})
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, "E-posta", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Email, new { @class="form-control" , @placeholder = "ornek@ornek.com" , @type = "email" , @required = "required"})
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Cinsiyet, "Cinsiyet", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.DropDownListFor(model => model.Cinsiyet,new SelectList(ViewBag.Cinsiyet, "Value", "Text"),"Seçiniz", new { @class="form-control", @required = "required"})
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Durum, "Durum", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    @Html.DropDownListFor(model => model.Durum,new SelectList(ViewBag.Durum, "Value", "Text"),"Seçiniz", new { @class="form-control" ,@required = "required"})
                </div>
            </div>
            <div class="mt-2 col-md-12">
            </div>
             <div class="form-group row">
                 @Html.Label("submitLabel", "", new { @class="col-sm-2 col-form-label"})
                <div class="col-sm-4">
                    <button type="submit" id="submitBtn" class="btn btn-success">Kaydet</button>
                </div>
            </div>

        </form>

    }
</div>

<script>
  $(".datetimepicker").datetimepicker({
        lang: 'tr',
        format: 'd.m.Y',
        onSelectDate: function (currentDate, $input) {
            $input.change();
        }
    });
</script>

